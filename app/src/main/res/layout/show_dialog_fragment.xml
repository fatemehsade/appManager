<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title: "
        android:textSize="30sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/show_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="tamrin9"
        android:textSize="35sp"
        android:textColor="#E91E63"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description: "
        android:textSize="30sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/show_dialog_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="tahvil"
        android:textSize="35sp"
        android:textColor="#E91E63"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="State: "
        android:textSize="30sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/show_dialog_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="state"
        android:textSize="35sp"
        android:textColor="#E91E63"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date: "
        android:textSize="30sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/show_dialog_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="20/9/79"
        android:textSize="35sp"
        android:textColor="#E91E63"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time: "
        android:textSize="30sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/show_dialog_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="20:33"
        android:textSize="35sp"
        android:textColor="#E91E63"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/show_dialog_delete"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            app:icon="@drawable/ic_delete"
            app:iconSize="50dp"
            android:text="Delete"
            android:textSize="8dp"
            android:layout_height="wrap_content"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/show_dialog_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            app:icon="@drawable/ic_edit"
            android:text="Edit"
            android:textSize="8dp"
            app:iconSize="50dp"
            android:layout_height="wrap_content"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/show_dialog_cancle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            app:icon="@drawable/ic_close"
            app:iconSize="50dp"
            android:text="Cancle"
            android:textSize="8dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>